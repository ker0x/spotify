{
  "name": "kerox/spotify",
  "type": "library",
  "description": "PHP Library to easily use Spotify API",
  "keywords": [
    "spotify",
    "api",
    "psr-7"
  ],
  "homepage": "https://github.com/ker0x/spotify",
  "license": "MIT",
  "authors": [
    {
      "name": "Romain Monteil",
      "email": "monteil.romain@gmail.com",
      "homepage": "https://kerox.fr",
      "role": "Author"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "fig/http-message-util": "^1.1",
    "nyholm/psr7": "^1.2",
    "psr/http-client": "^1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.5",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.0"
  },
  "suggest": {
    "kerox/oauth2-spotify": "To generate OAuth token for Spotify",
    "symfony/http-client": "To send PSR-7 request with PSR-18 compatible HTTP client"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Kerox\\Spotify\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kerox\\Spotify\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --diff --verbose --config=.php_cs",
    "phpstan": "vendor/bin/phpstan --level=max --memory-limit=\"-1\" --no-progress analyze",
    "phpunit": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
  }
}
